<!doctype html>

<html lang="en">

{{> partials/head}}

<body>

  {{> partials/header}}

  <h1>Museums:</h1>

  <table class="museums">
    <tr>
      {{#museums}}
    <tr>
      <td><a href="/museums/{{id}}">{{name}}</a></td>
      <td>{{country}}</td>
    </tr>
    {{/museums}}
    </tr>
  </table>

{{^museums}}
No results
{{/museums}}

                <form method="get" action="/museums">
                    <div>
                        {{#pages}}
                        {{#namePage}}
                            <input type="text" name="name" placeholder="Enter museum name" value={{namePage}}>
                        {{/namePage}}
                        {{^namePage}}
                            <input type="text" name="name" placeholder="Enter museum name">
                        {{/namePage}}
                        <button>Find</button>
                        {{/pages}}
                    </div>
                </form>
    
                <form method="get" action="/museums">
                    <div>
                        {{#pages}}
                            {{#prevPage}}
                                {{#namePage}}
                                <a href="/museums?page={{prevPage}}&name={{namePage}}">Previous</a>
                                {{/namePage}}
                                {{^namePage}}
                                <a href="/museums?page={{prevPage}}">Previous</a>
                                {{/namePage}}
                            {{/prevPage}}
                            <input type="number" name="page" min="1" max="{{pagesNumber}}" value={{currentPage}}>
                            {{#namePage}}
                                <input type="hidden" name="name" value={{namePage}}>
                            {{/namePage}}
                            <p> / </p>
                            <p>{{pagesNumber}}</p>
                            {{#nextPage}}
                                {{#namePage}}
                                <a href="/museums?page={{nextPage}}&name={{namePage}}">Next</a>
                                {{/namePage}}
                                {{^namePage}}
                                <a href="/museums?page={{nextPage}}">Next</a>
                                {{/namePage}}
                            {{/nextPage}}
                            <button >Find</button>
                        {{/pages}}
                    </div>
                </form>

                <div >
                <a  href="/museums/new">New museum</a>
                </div>

    {{> partials/footer}}
</body>

</html>