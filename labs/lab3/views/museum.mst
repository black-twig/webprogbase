<!doctype html>

<html lang="en">

{{> head}}

<body>

  {{> header}}

  {{#museum}}
  <div>
  <img src="{{imageUrl}}" class="museum_photo" />
  </div>

  <div class="museum">
    <p><b>Name</b>: {{name}}</p>
    <p><b>Country</b>: {{country}}</p>
    <p><b>Founded</b>: {{founded}}</p>
    <p><b>Artists presented</b>: {{artistNum}}</p>
    <p><b>Exhibitions</b>: {{exhibitNum}}</p>
  </div>

  <form method="POST" action="/museums/{{id}}">
    <input type="submit" value="Delete museum">
  </form>
  {{/museum}}

  {{> footer}}
</body>

</html>